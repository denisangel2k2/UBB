                            <TableColumn fx:id="destinationColumn" prefWidth="75.0" text="Destination" />
                            <TableColumn fx:id="dateColumn" prefWidth="111.0" text="Date" />
                              <TableColumn fx:id="hourColumn" prefWidth="66.0" text="Hour" />
                              <TableColumn fx:id="availableSeatsColumn" prefWidth="114.0" text="Available seats" />
                          </columns>
                        </TableView>
                        <TextField fx:id="destinationTextField" layoutX="14.0" layoutY="83.0" prefHeight="25.0" prefWidth="174.0" promptText="Destination" />
                        <DatePicker fx:id="flightDatePicker" layoutX="206.0" layoutY="83.0" promptText="Date" />
                        <Button fx:id="searchButton" layoutX="328.0" layoutY="51.0" mnemonicParsing="false" onAction="#onSearchButtonClicked" text="Search" />
