                           <columns>
                              <TableColumn fx:id="destinationColumn1" prefWidth="75.0" text="Destination" />
                              <TableColumn fx:id="dateColumn1" prefWidth="111.0" text="Date" />
                              <TableColumn fx:id="hourColumn1" prefWidth="66.0" text="Hour" />
                              <TableColumn fx:id="availableSeatsColumn1" prefWidth="114.0" text="Available seats" />
                           </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
               </children>
            </StackPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
