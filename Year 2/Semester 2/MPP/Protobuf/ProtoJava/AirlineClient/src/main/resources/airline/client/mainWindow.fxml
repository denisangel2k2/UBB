            <VBox prefHeight="400.0" prefWidth="206.0" BorderPane.alignment="CENTER">
               <children>
                  <AnchorPane prefHeight="403.0" prefWidth="206.0">
                     <children>
                        <Button fx:id="logoutButton" layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onAction="#onLogoutButtonClicked" text="Logout" />
                        <Label fx:id="loggedInUsernameLabel" layoutX="76.0" layoutY="37.0" text="Username" />
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </left>
         <center>
            <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <AnchorPane fx:id="buyTicketsPane" prefHeight="200.0" prefWidth="200.0" visible="false">
                     <children>
                        <TextField fx:id="touristNameTextField" layoutX="74.0" layoutY="88.0" promptText="Name" />
                        <TextField fx:id="addressTextField" layoutX="74.0" layoutY="123.0" promptText="Address" />
                        <Button fx:id="buyButton" layoutX="107.0" layoutY="157.0" mnemonicParsing="false" onAction="#onBuyButtonClicked" prefHeight="25.0" prefWidth="83.0" text="Purchase" />
